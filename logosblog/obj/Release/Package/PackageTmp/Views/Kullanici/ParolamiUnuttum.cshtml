
@{
    ViewBag.Title = "ParolamiUnuttum";
}

<section class="s-content s-content--narrow s-content--no-padding-bottom">
    <article class="row format-standard">
        <div class="respond">

            <h3 class="h2">Parolamı Unuttum</h3>

            <form name="contactForm" id="contactForm" method="post" action="/Kullanici/ParolamiUnuttum">
                <fieldset>

                    <div class="form-field">
                        <input name="MailAdres" type="text" id="cName" class="full-width" placeholder="Mail Adresinizi giriniz" required>
                    </div>

                    <button type="submit" class="submit btn--primary btn--large full-width">Sıfırlama Bağlantısı Gönder</button>
                    <br />
                    <br /><br />
                </fieldset>
            </form>
        </div>
    </article>
</section>

